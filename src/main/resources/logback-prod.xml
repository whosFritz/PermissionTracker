<configuration>
    <appender name="fileAppender" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/permissiontracker.log</file>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="fileAppender"/>
    </root>
</configuration>
